<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      type="text/css"
      media="screen"
      href="/stylesheets/style.css"
    />
    <script src="main.js"></script>
  </head>
  <body class="detail_form">
    <div class="header_section">
      <h1>BLOG POST</h1>
      <div class="right-anchor">
        <% if(locals.user){ %>
        <a href="/logout"><button class="btn-create">logout</button></a>
        <a href="/blog"><button class="btn-create">create</button></a>
        <p class="user-icon"><%= user.username[0] %></p>
        <% } else {%>
        <a href="/login"><button class="btn-create">login</button></a> <% } %>
      </div>
    </div>
    <div class="display-info">
      <% blogs.forEach(function(blog){ %>
      <div class="one-card">
        <a href="/detail/<%= blog.slug %>"> <h4><%= blog.title %></h4></a>
        <p><%= blog.description %></p>
        <h5><%= moment(blog.date).fromNow() %></h5>

        <% if(locals.user){ %>
        <a href="/blog/<%= blog.id %>">
          <button class="remove button-style">remove</button></a>
        <a href="/blog/<%= blog.id %>/edit">
          <button class="edit button-style">edit</button></a>
        <% } %>
        
      </div>
      <% }); %>
    </div>
  </body>
</html>
